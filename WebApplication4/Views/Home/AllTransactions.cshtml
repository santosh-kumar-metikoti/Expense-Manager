@using System.Data;
@model DataSet;
@using WebApplication4.Models;

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Get Transactions</h1>

    <div class="Add-form">
    <form method="post" asp-controller="HOME" asp-action="AllTransactionsList" asp-action="Caluculate">
        <h2 class="text-center">Transactions</h2>       
        <div class="form-group">
            From Date:
            <input type="date" class="form-control" placeholder="From Date" name="startDate" required="required">
        </div>
        <div class="form-group">
            To Date:
            <input type="date" class="form-control" placeholder="To Date" name="endDate" required="required">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
    </form>
    </div>

    <style>
        table,th {
          border: 1px solid black;
          border-collapse: collapse;
        }
        td{
             height: 50px;
             width: 500px;
        
        }
    </style>

</div>
    <a href="/HOME" style="text-align:left">Back</a>




