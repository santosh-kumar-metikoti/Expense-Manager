@using System.Data;
@model DataSet
@using WebApplication4.Models;

<h1 >Expense Manager</h1>
<div class="text-center">

    <div class="Add-form">

        <form asp-action="AddTransaction" method="post" asp-controller="HOME">
        <h2 class="text-center">Add Transaction</h2>       
        <div class="form-group">
            <input type="number" class="form-control" placeholder="Amount" name="amount" required="required">
        </div>
        <div class="form-group">
            <input type="date" class="form-control" name="date" required="required">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="note" placeholder="note(optional)">
        </div>
        <div class="form-group">
            @Html.DropDownList("account", new SelectList((IEnumerable<Account_list>)ViewBag.accounts, "AccName", "AccName",new { @class="dropdown-menu" }))
            <a href="/HOME/AddAccount">Add Account</a>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Add</button>
        </div>
        </form>
      </div>



    <a href="/HOME/AllTransactions"><h2 style="text-align:left">Transactions</h2></a>

    <div class="container">
         <table class="table table-striped">
            <thead class="thead-dark">
            <tr">
                <th>Account</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Type</th>
                <th>View</th>
            </thead>

            </tr>
            @foreach(DataRow row in Model.Tables[0].Rows)
            {
                <tr>
                    <td>@row["account"]</td>
                    <td>@row["amount"]</td>
                    <td>@row["date"]</td>
                    <td>@row["type"]</td>
                    <td><button class="btn btn-primary btn-block" onclick="window.location.href='/HOME/TransactionInfo?id=@row["transactionid"]'">View details</button></td>
                </tr>
            }
          </table>
    </div>

</div>




